# GitHub OAuth
GITHUB_CLIENT_ID=              # 必須（Cloud Run も）
GITHUB_CLIENT_SECRET=          # 必須（Cloud Run も）
NEXTAUTH_URL=                  # 必須。ローカルは http://localhost:3000 / 本番は https://あなたのサービスURL
NEXTAUTH_SECRET=               # 必須（Cloud Run も）。本番では openssl rand -base64 32 で生成推奨

# Google Cloud
GOOGLE_CLOUD_PROJECT=          # 必須（Cloud Run も）
GOOGLE_APPLICATION_CREDENTIALS= # ローカルのみ。Cloud Run では未設定（デフォルト SA 使用）

# Firestore
FIRESTORE_DATABASE_ID=         # 未使用時は (default) のままでよい

# VertexAI
VERTEX_AI_LOCATION=            # 必須（AssetCard 生成で使用）
VERTEX_AI_MODEL=               # 必須

# Cloud Tasks
CLOUD_TASKS_QUEUE_NAME=        # 必須
CLOUD_TASKS_LOCATION=          # 必須

# Webhook Secret (for GitHub webhook verification)
GITHUB_WEBHOOK_SECRET=         # 必須（Cloud Run も）
# Webhook URL (for development, use localhost)
GITHUB_WEBHOOK_URL=            # 本番は https://あなたのサービスURL/api/webhooks/github

# 以下は未設定時は NEXTAUTH_URL から自動補完される
# PR Event Processor Worker URL (default: NEXTAUTH_URL/api/tasks/pr-event-processor)
PR_EVENT_PROCESSOR_WORKER_URL=
# Asset Generator Worker URL (default: NEXTAUTH_URL/api/tasks/asset-generator)
ASSET_GENERATOR_WORKER_URL=
